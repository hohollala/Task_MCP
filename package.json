{
  "name": "mcp-task-manager",
  "version": "1.0.0",
  "description": "MCP Task Manager - 체계적인 프로젝트 관리를 위한 MCP 서버",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "task-new": "./dist/index.js",
    "task-plan": "./dist/index.js",
    "task-start": "./dist/index.js",
    "task-resume": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "postinstall": "npm run build && npm run create-commands || echo '⚠️ build/create-commands 실패, 건너뜀'",
    "create-commands": "node scripts/create-commands.js",
    "uninstall": "node scripts/remove-commands.js",
    "type-check": "tsc --noEmit"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.1",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "mcp",
    "task-management",
    "project-planning"
  ],
  "author": "hohollala",
  "license": "MIT"
}
