{
  "name": "mcp-task-manager",
  "version": "1.0.0",
  "description": "MCP server for Gemini CLI integration",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "task-new": "./dist/index.js",
    "task-plan": "./dist/index.js",
    "task-start": "./dist/index.js",
    "task-resume": "./dist/index.js",
    "gemini-mcp": "./dist/index.js",
    "gemini-mcp.cmd": "./dist/index.js"
  },
  "scripts": {
    "build": "npx tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "postinstall": "npm run build && npm run create-commands",
    "create-commands": "node scripts/create-commands.js",
    "uninstall": "node scripts/remove-commands.js",
    "start:win": "node dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepublishOnly": "npm run build",
    "generate-commands": "node -e \"import('./dist/utils/commandFileGenerator.js').then(m => m.generateAllCommandFiles(process.cwd()))\"",
    "postinstall:win": "npm run build && npm run generate-commands && copy dist\\index.cmd dist\\gemini-mcp.cmd"
  },
  "keywords": [
    "mcp",
    "task-management",
    "project-planning",
    "gemini",
    "cli",
    "ai",
    "model-context-protocol"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hohollala/Gemini_Mcp.git"
  },
  "homepage": "https://github.com/hohollala/Gemini_Mcp#readme",
  "bugs": {
    "url": "https://github.com/hohollala/Gemini_Mcp/issues"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@types/node": "^20.0.0",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "tsx": "^4.0.0",
    "typescript": "^5.3.0"
  }
}